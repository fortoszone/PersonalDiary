<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/btn_archive"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_archive_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/archive_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_archive"
        android:orientation="vertical"
        android:id="@+id/ll_header"
        android:layout_marginTop="108dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:id="@+id/tv_hello_title"
            android:textSize="36sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:id="@+id/tv_username"
            android:textSize="36sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="36dp"
        android:id="@+id/rv_diaries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/diary_row"
        app:layout_constraintTop_toBottomOf="@id/ll_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>